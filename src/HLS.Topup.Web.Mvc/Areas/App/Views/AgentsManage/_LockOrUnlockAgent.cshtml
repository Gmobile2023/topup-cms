@using HLS.Topup.Common;

@using System.Globalization
@using HLS.Topup.Web.Areas.App.Models.Common.Modals
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Khoá/Mở khoá đại lý"))
@model HLS.Topup.Web.Areas.App.Models.AgentsManage.LockOrUnlockModel
<div class="modal-body">
    <div id="LockOrUnlockInformationsTab">
        <form name="LockOrUnlockInformationsForm" role="form" novalidate class="form-validation">
            <input type="hidden" name="id" id="agentId" value="@Model.Id"/>
            <input type="hidden" name="type" id="type" value="@Model.Type"/>
            <div class="row">
                <div class="col-12">
                    <h6>Nhập lý do</h6>
                    <textarea class="form-control" name="lockAccountNote" id="LockAccountNote" rows="5"></textarea>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")