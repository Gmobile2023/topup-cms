
@using HLS.Topup.Web.Areas.App.Models.Common.Modals
@using HLS.Topup.Web.Areas.App.Models.Countries
@model CountryViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CountryInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("CountryCode") :</h6>
                @Model.Country.CountryCode
            </div>
            <div class="col-6 mb-3">
                <h6>@L("CountryName") :</h6>
                @Model.Country.CountryName
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Status") :</h6>
                @L("Enum_CountryStatus_" + (int)Model.Country.Status)
            </div>


        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

