<div class="modal-body">
    <div id="AccountingEntryInformationsTab">
        <form name="AccountingEntryInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.Deposit.Id"/>
            }

