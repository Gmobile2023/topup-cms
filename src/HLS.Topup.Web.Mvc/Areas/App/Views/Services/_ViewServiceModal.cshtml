
@using HLS.Topup.Web.Areas.App.Models.Common.Modals
@using HLS.Topup.Web.Areas.App.Models.Services
@model ServiceViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="ServiceInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("ServiceCode") :</h6>
                @Model.Service.ServiceCode
            </div>
            <div class="col-6 mb-3">
                <h6>@L("ServicesName") :</h6>
                @Model.Service.ServicesName
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Status") :</h6>
                @L("Enum_ServiceStatus_" + (int)Model.Service.Status)
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Order") :</h6>
                @Model.Service.Order
            </div>


        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

