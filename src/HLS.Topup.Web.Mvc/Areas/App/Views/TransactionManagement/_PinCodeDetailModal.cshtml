@using HLS.Topup.Web.Areas.App.Models.Common.Modals
@model HLS.Topup.Web.Areas.App.Models.TransactionManagement.TransactionDetailViewDto

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Xem chi tiết"))

<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <a href="javascript:;" id="ExportToExcel" class="float-right">Xuất sang Excel</a>
        </div>
        <div class="col-md-12 table-data">
            <input type="hidden" name="TransCode" value="@Model.TransCode">
            <table id="DetailTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                <thead>
                <tr>
                    <th>STT</th>
                    <th>Mệnh giá</th>
                    <th>Serial</th>
                    <th>Ngày hết hạn</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-light-primary font-weight-bold close-button" data-dismiss="modal">Đóng</button>
</div>