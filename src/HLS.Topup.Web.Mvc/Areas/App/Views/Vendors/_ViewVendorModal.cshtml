
@using HLS.Topup.Web.Areas.App.Models.Common.Modals
@using HLS.Topup.Web.Areas.App.Models.Vendors
@model VendorViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="VendorInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Code") :</h6>
                @Model.Vendor.Code
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.Vendor.Name
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Description") :</h6>
                @Model.Vendor.Description
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Print_Help") :</h6>
                @Model.Vendor.Print_Help
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Print_Suport") :</h6>
                @Model.Vendor.Print_Suport
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Status") :</h6>
                @Model.Vendor.Status
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Address") :</h6>
                @Model.Vendor.Address
            </div>
            <div class="col-6 mb-3">
                <h6>@L("HotLine") :</h6>
                @Model.Vendor.HotLine
            </div>


        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")

