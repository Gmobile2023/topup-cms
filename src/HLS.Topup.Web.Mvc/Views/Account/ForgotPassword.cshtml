@using Abp.Authorization.Users
@using HLS.Topup.Localization
@section Scripts
{
    <script abp-src="/view-resources/Views/Account/ForgotPassword.js" asp-append-version="true"></script>
}
@section Styles{
    <link href="/metronic/common/css/login-1@(CultureHelper.IsRtl ? ".rtl":"").css" rel="stylesheet" />
}
<div class="login-form">
    <div class="pb-13 pt-lg-0 pt-5">
        <h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">@L("ForgotPassword")</h3>
    </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    <div class="alert-icon">
                        <i class="fa fa-exclamation-triangle"></i>
                    </div>
                    <div class="alert-text">@ViewBag.ErrorMessage</div>
                </div>
            }
    <form class="form forget-form" asp-action="SendOtpResetPass" method="post">
        <p>
            @L("SendPasswordResetLink_Information")
        </p>
        <div class="form-group">
            <input class="form-control placeholder-no-fix form-control-solid h-auto py-7 px-6 rounded-lg font-size-h6" type="text" placeholder="@L("PhoneNumber")" name="phoneNumber" required />
        </div>
        <div class="pb-lg-0 pb-5 text-center">
            <a asp-action="Login">
                <button type="button" id="back-btn" class="btn btn-light-primary font-weight-bolder font-size-h6 px-8 py-4 my-3">@L("Back")</button>
            </a>
            <button type="submit" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">@L("Submit")</button>
        </div>
    </form>
</div>
