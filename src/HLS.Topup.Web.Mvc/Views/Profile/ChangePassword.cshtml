@{
    Layout = $"~/Views/Layout/_LayoutProfile.cshtml";
}
@{
    ViewBag.CurrentPageName = FrontEndPageNames.Profile_ChangePassword;
    ViewBag.Title = "Đổi mật khẩu";
    //ViewBag.ImageTitle = Url.Action("GetProfilePicture", "Profile", new {area = string.Empty});
    ViewBag.ImageTitle = "/themes/topup/images/change-password-white.svg";
}

@section Scripts
{
    <script abp-src="/view-resources/Views/Profile/ChangePassword.js"></script>
}

<div id="Profile_ChangePassword_Page" class="section-body-middle">
    <form class="step step1" id="changePassword">
        <div class="section-body-middle-form-p1 no-border-top">
            <div class="form-group margin-big">
                <label for="" class="title">@L("CurrentPassword") &nbsp; <span class="lightred">(*)</span></label>
                <div class="form-group-wrap">
                    <span class="block text-right form-text text-muted">@Html.Raw(L("PasswordChangeDontRememberMessage", "<a href=\"" + Url.Action("ForgotPassword", "Account", new {area = ""}) + "\">" + L("ClickHere") + "</a>"))</span>
                    <input id="CurrentPassword" type="password" autocomplete="new-password" name="CurrentPassword" class="form-control" required maxlength="@HLS.Topup.Authorization.Users.User.MaxPlainPasswordLength">
                </div>
            </div>
            <div class="form-group margin-big">
                <label for="" class="title"> @L("NewPassword") &nbsp; <span class="lightred">(*)</span></label>
                <div class="form-group-wrap">
                    <input id="NewPassword" type="password" autocomplete="new-password" name="NewPassword" class="form-control" required>
                </div>
            </div>
            <div class="form-group margin-big">
                <label for="" class="title">@L("NewPasswordRepeat") &nbsp; <span class="lightred">(*)</span></label>
                <div class="form-group-wrap">
                    <input id="NewPasswordRepeat" type="password" autocomplete="new-password" name="NewPasswordRepeat" class="form-control" required equalto="#NewPassword">
                </div>
            </div>
        </div>

        <div class="section-body-middle-form-p2">
            <div class="row">
                <div tabindex="7" class="col-md-12 text-right">
                    <button type="button" onclick="Sv.goBackHistory()" class="button btn-custom btn-grey">Quay lại</button>
                    <button type="button" id="btn-Confirm" class="button btn-custom btn-blue">Xác nhận</button>
                </div>
            </div>
        </div>

    </form>
</div>