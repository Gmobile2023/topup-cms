    <div class="page-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input id="StartEndRange" type="text" placeholder="@L("DateRange")" class="form-control date-range-picker"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <select id="TargetValueFilterSelectionCombobox" class="form-control bs-select">
                        <option value="">@L("All")</option>
                        <option value="UNREAD">@L("Unread")</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tb-notifications">
                    <table id="NotificationsTable" class="fixed-size-table-content display table table-separate table-head-custom no-footer dtr-inline dt-responsive nowrap">
                        <thead>
                        <tr>
                            <th>@L("Notification")</th>
