    ViewBag.Title = "Quản lý thông báo";
}

@section Styles {
    <link rel="stylesheet" abp-href="/view-resources/Areas/App/Views/Notifications/Index.css" asp-append-version="true"/>
}

@section Scripts {
    <script abp-src="/view-resources/Views/Profile/Notifications.js" asp-append-version="true"></script>
}

<div class="transaction-history">
