<div class="form-group form-group-dashed row">
    <label class="col-md-4 col-xs-6 control-label">Tên đăng nhập</label>
    <label class="col-md-8 col-xs-6 control-label  ">
        <strong>@(Model.UserInfo.UserName)</strong>
    </label>
</div>
