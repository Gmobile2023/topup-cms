    <label class="col-md-4 col-xs-6 control-label">Tên đại lý</label>
    <label class="col-md-8 col-xs-6 control-label  ">@(Model.UserAccountInfo.NetworkInfo?.FullName)</label>
</div>
<div class="form-group form-group-dashed row">

    <label class="col-md-4 col-xs-6 control-label">Số dư hiện tại</label>
    <label class="col-md-8 col-xs-6 control-label  ">
        <span class="">@await Component.InvokeAsync(typeof(BalanceViewComponent), new {accountCode = Model.UserAccountInfo.NetworkInfo?.AccountCode})</span>
    </label>
</div>
